<local:D2DWindow
    x:Class="InfoPanel.Views.Common.DisplayWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:app="clr-namespace:InfoPanel"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:InfoPanel.Views.Common"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:skia="clr-namespace:SkiaSharp.Views.WPF;assembly=SkiaSharp.Views.WPF"
    Title="DisplayWindow"
    Width="{Binding Profile.Width, Mode=TwoWay, UpdateSourceTrigger=Default, Delay=100}"
    Height="{Binding Profile.Height, Mode=TwoWay, UpdateSourceTrigger=Default, Delay=100}"
    Background="Transparent"
    DataContext="{Binding RelativeSource={RelativeSource self}}"
    KeyUp="Window_KeyUp"
    MouseDown="Window_MouseDown"
    MouseMove="Window_MouseMove"
    MouseUp="Window_MouseUp"
    ResizeMode="CanResize"
    ShowInTaskbar="False"
    Topmost="{Binding Profile.Topmost}"
    WindowStyle="None"
    mc:Ignorable="d">
    <WindowChrome.WindowChrome>
        <WindowChrome
            CaptionHeight="0"
            CornerRadius="0"
            GlassFrameThickness="0"
            ResizeBorderThickness="10" />
    </WindowChrome.WindowChrome>
    <Canvas Background="{Binding Path=Profile.BackgroundColor}">
        <MediaElement
            Name="VideoBackground"
            LoadedBehavior="Manual"
            Stretch="None"
            UnloadedBehavior="Manual">
            <MediaElement.Effect>
                <app:DeeperColorEffect />
            </MediaElement.Effect>
            <!--<MediaElement.RenderTransform>
                <RotateTransform Angle="270" CenterX="425" CenterY="425" />
            </MediaElement.RenderTransform>-->
        </MediaElement>
        <skia:SKElement
            x:Name="skElement"
            Width="{Binding Profile.Width, Mode=OneWay}"
            Height="{Binding Profile.Height, Mode=OneWay}"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            PaintSurface="OnPaintSurface" />
    </Canvas>
</local:D2DWindow>
