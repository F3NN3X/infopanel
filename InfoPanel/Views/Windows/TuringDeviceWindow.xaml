<ui:UiWindow
    x:Class="InfoPanel.Views.Windows.TuringDeviceWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="Turing Device Manager"
    Width="900"
    Height="600"
    ExtendsContentIntoTitleBar="True"
    ResizeMode="CanResize"
    WindowStartupLocation="CenterOwner"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <ui:TitleBar
            Title="{Binding DeviceName, FallbackValue='Turing Device Manager'}"
            Grid.Row="0"
            ShowMaximize="False" />

        <TabControl Grid.Row="1" Margin="10">
            <!--  Video Management Tab  -->
            <TabItem Header="Video Management">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <!--  Storage Info  -->
                    <ui:Card Grid.Row="0" Margin="0,0,0,10">
                        <StackPanel>
                            <TextBlock
                                Margin="0,0,0,10"
                                FontSize="16"
                                FontWeight="Bold"
                                Text="Storage Information" />
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>

                                <TextBlock
                                    Grid.Row="0"
                                    Grid.Column="0"
                                    Margin="0,0,10,5"
                                    Text="Total Space:" />
                                <TextBlock
                                    Grid.Row="0"
                                    Grid.Column="1"
                                    Margin="0,0,0,5"
                                    Text="{Binding TotalStorageDisplay}" />

                                <TextBlock
                                    Grid.Row="1"
                                    Grid.Column="0"
                                    Margin="0,0,10,5"
                                    Text="Used Space:" />
                                <TextBlock
                                    Grid.Row="1"
                                    Grid.Column="1"
                                    Margin="0,0,0,5"
                                    Text="{Binding UsedStorageDisplay}" />

                                <TextBlock
                                    Grid.Row="2"
                                    Grid.Column="0"
                                    Margin="0,0,10,0"
                                    Text="Free Space:" />
                                <TextBlock
                                    Grid.Row="2"
                                    Grid.Column="1"
                                    Text="{Binding FreeStorageDisplay}" />
                            </Grid>

                            <ProgressBar
                                Height="10"
                                Margin="0,10,0,0"
                                Maximum="100"
                                Value="{Binding StorageUsagePercentage}" />
                        </StackPanel>
                    </ui:Card>

                    <!--  Action Buttons  -->
                    <StackPanel
                        Grid.Row="1"
                        Margin="0,0,0,10"
                        Orientation="Horizontal">
                        <ui:Button
                            Margin="0,0,10,0"
                            Command="{Binding RefreshStorageCommand}"
                            Content="Refresh"
                            Icon="ArrowSync24" />
                        <ui:Button
                            Margin="0,0,10,0"
                            Command="{Binding UploadVideoCommand}"
                            Content="Upload Video"
                            Icon="VideoClip24" />
                        <TextBlock
                            Margin="10,0,0,0"
                            VerticalAlignment="Center"
                            FontStyle="Italic"
                            Text="{Binding CurrentlyPlaying, StringFormat='Currently Playing: {0}', FallbackValue='Currently Playing: Nothing'}" />
                    </StackPanel>

                    <!--  File List  -->
                    <ui:Card Grid.Row="2">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>

                            <TextBlock
                                Grid.Row="0"
                                Margin="0,0,0,10"
                                FontSize="14"
                                FontWeight="Bold"
                                Text="Video Files" />

                            <DataGrid
                                Grid.Row="1"
                                AutoGenerateColumns="False"
                                CanUserAddRows="False"
                                GridLinesVisibility="Horizontal"
                                HeadersVisibility="Column"
                                ItemsSource="{Binding DeviceFiles}"
                                SelectedItem="{Binding SelectedFile}">
                                <DataGrid.Columns>
                                    <DataGridTextColumn
                                        Width="*"
                                        Binding="{Binding Name}"
                                        Header="Name" />
                                    <DataGridTextColumn
                                        Width="80"
                                        Binding="{Binding Type}"
                                        Header="Type" />
                                    <DataGridTextColumn
                                        Width="100"
                                        Binding="{Binding SizeDisplay}"
                                        Header="Size" />
                                    <DataGridTemplateColumn Width="200" Header="Actions">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <StackPanel Orientation="Horizontal">
                                                    <ui:Button
                                                        Margin="0,0,5,0"
                                                        Padding="5,2"
                                                        Command="{Binding DataContext.PlayFileCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                        CommandParameter="{Binding}"
                                                        Content="Play"
                                                        FontSize="12" />
                                                    <ui:Button
                                                        Padding="5,2"
                                                        Appearance="Danger"
                                                        Command="{Binding DataContext.DeleteFileCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                        CommandParameter="{Binding}"
                                                        Content="Delete"
                                                        FontSize="12" />
                                                </StackPanel>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                </DataGrid.Columns>
                            </DataGrid>
                        </Grid>
                    </ui:Card>

                    <!--  Status Bar Container with fixed height  -->
                    <Grid Grid.Row="3" Height="60" Margin="0,10,0,0">
                        <ui:InfoBar
                            Title="{Binding StatusTitle}"
                            VerticalAlignment="Top"
                            IsOpen="{Binding IsStatusVisible}"
                            Message="{Binding StatusMessage}"
                            Severity="{Binding StatusSeverity}" />
                    </Grid>
                </Grid>
            </TabItem>

            <!--  Settings Tab  -->
            <TabItem Header="Settings">
                <Grid Margin="10">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <StackPanel>
                            <!--  Device Settings  -->
                            <ui:Card Margin="0,0,0,10">
                                <StackPanel>
                                    <TextBlock
                                        Margin="0,0,0,10"
                                        FontSize="16"
                                        FontWeight="Bold"
                                        Text="Device Settings" />

                                    <TextBlock Margin="0,0,0,5" Text="Default Brightness:" />
                                    <Grid Margin="0,0,0,15">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="50" />
                                        </Grid.ColumnDefinitions>
                                        <Slider
                                            Grid.Column="0"
                                            Margin="0,0,10,0"
                                            IsSnapToTickEnabled="True"
                                            Maximum="100"
                                            Minimum="0"
                                            TickFrequency="5"
                                            Value="{Binding Brightness}" />
                                        <TextBlock
                                            Grid.Column="1"
                                            VerticalAlignment="Center"
                                            Text="{Binding Brightness, StringFormat='{}{0}%'}" />
                                    </Grid>

                                    <TextBlock Margin="0,0,0,5" Text="Default Orientation:" />
                                    <ComboBox
                                        Width="200"
                                        HorizontalAlignment="Left"
                                        Margin="0,0,0,15"
                                        ItemsSource="{Binding OrientationOptions}"
                                        SelectedItem="{Binding SelectedOrientation}" />

                                    <TextBlock Margin="0,0,0,5" Text="Startup Mode:" />
                                    <ComboBox
                                        Width="200"
                                        HorizontalAlignment="Left"
                                        Margin="0,0,0,10"
                                        ItemsSource="{Binding StartupModeOptions}"
                                        SelectedItem="{Binding SelectedStartupMode}" />
                                    
                                    <TextBlock 
                                        Margin="0,0,0,10"
                                        FontSize="12"
                                        FontStyle="Italic"
                                        TextWrapping="Wrap"
                                        Text="Note: When 'Video' is selected as startup mode, the currently playing video will be set as the auto-play video." />
                                </StackPanel>
                            </ui:Card>

                            <!--  Device Actions  -->
                            <ui:Card>
                                <StackPanel>
                                    <TextBlock
                                        Margin="0,0,0,10"
                                        FontSize="16"
                                        FontWeight="Bold"
                                        Text="Device Actions" />

                                    <WrapPanel>
                                        <ui:Button
                                            Margin="0,0,10,10"
                                            Command="{Binding SaveSettingsCommand}"
                                            Content="Save Settings"
                                            Icon="Save24" />
                                        <ui:Button
                                            Margin="0,0,10,10"
                                            Command="{Binding RestartDeviceCommand}"
                                            Content="Restart Device"
                                            Icon="ArrowReset24" />
                                    </WrapPanel>
                                </StackPanel>
                            </ui:Card>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </TabItem>
        </TabControl>

        <!--  Loading Overlay  -->
        <Grid
            Grid.Row="1"
            Background="#80000000"
            Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <ui:ProgressRing
                    Width="50"
                    Height="50"
                    IsIndeterminate="True" />
                <TextBlock
                    Margin="0,10,0,0"
                    HorizontalAlignment="Center"
                    Foreground="White"
                    Text="{Binding LoadingText}" />
            </StackPanel>
        </Grid>
    </Grid>
</ui:UiWindow>