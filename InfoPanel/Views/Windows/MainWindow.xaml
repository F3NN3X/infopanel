<ui:FluentWindow
    x:Class="InfoPanel.Views.Windows.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:app="clr-namespace:InfoPanel"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:InfoPanel"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="clr-namespace:InfoPanel.Models"
    xmlns:pages="clr-namespace:InfoPanel.Views.Pages"
    xmlns:tray="http://schemas.lepo.co/wpfui/2022/xaml/tray"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="InfoPanel"
    Width="1300"
    Height="900"
    d:DesignHeight="900"
    d:DesignWidth="1300"
    ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
    ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    Closing="MainWindow_Closing"
    ContentRendered="Window_ContentRendered"
    ExtendsContentIntoTitleBar="True"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    WindowBackdropType="Mica"
    WindowCornerPreference="Round"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Grid>
        <Grid.LayoutTransform>
            <ScaleTransform x:Name="MainScaleTransform" ScaleX="{Binding Source={x:Static local:ConfigModel.Instance}, Path=Settings.UiScale}" ScaleY="{Binding Source={x:Static local:ConfigModel.Instance}, Path=Settings.UiScale}" />
        </Grid.LayoutTransform>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <ui:TitleBar
            Name="RootTitleBar"
            Title="InfoPanel"
            Grid.Row="0"
            Icon="/InfoPanel;component/Resources/Images/favicon.ico" />

        <ui:NavigationView
            x:Name="RootNavigation"
            Grid.Row="1"
            BreadcrumbBar="{Binding ElementName=BreadcrumbBar}"
            IsBackButtonVisible="Collapsed"
            IsPaneOpen="{Binding Source={x:Static local:ConfigModel.Instance}, Path=Settings.IsPaneOpen, Mode=TwoWay}"
            OpenPaneLength="150"
            PaneDisplayMode="Left">
            <ui:NavigationView.Header>
                <ui:BreadcrumbBar
                    x:Name="BreadcrumbBar"
                    Margin="20,20,20,20"
                    FontSize="24"
                    FontWeight="DemiBold" />
            </ui:NavigationView.Header>

            <ui:NavigationView.MenuItems>
                <ui:NavigationViewItem
                    Content="Home"
                    Tag="home"
                    TargetPageType="{x:Type pages:HomePage}">
                    <ui:NavigationViewItem.Icon>
                        <ui:SymbolIcon Symbol="Home24" />
                    </ui:NavigationViewItem.Icon>
                </ui:NavigationViewItem>
                <ui:NavigationViewItem
                    Content="Profiles"
                    Tag="profiles"
                    TargetPageType="{x:Type pages:ProfilesPage}">
                    <ui:NavigationViewItem.Icon>
                        <ui:SymbolIcon Symbol="List20" />
                    </ui:NavigationViewItem.Icon>
                </ui:NavigationViewItem>
                <ui:NavigationViewItem
                    Content="Design"
                    Tag="design"
                    TargetPageType="{x:Type pages:DesignPage}">
                    <ui:NavigationViewItem.Icon>
                        <ui:SymbolIcon Symbol="DesktopCursor20" />
                    </ui:NavigationViewItem.Icon>
                </ui:NavigationViewItem>
            </ui:NavigationView.MenuItems>

            <ui:NavigationView.FooterMenuItems>
                <ui:NavigationViewItem
                    Content="Updates"
                    Tag="updates"
                    TargetPageType="{x:Type pages:UpdatesPage}">
                    <ui:NavigationViewItem.Icon>
                        <ui:SymbolIcon Symbol="PhoneUpdate20" />
                    </ui:NavigationViewItem.Icon>
                </ui:NavigationViewItem>
                <ui:NavigationViewItem
                    Content="Plugins"
                    Tag="plugins"
                    TargetPageType="{x:Type pages:PluginsPage}">
                    <ui:NavigationViewItem.Icon>
                        <ui:SymbolIcon Symbol="PlugConnected20" />
                    </ui:NavigationViewItem.Icon>
                </ui:NavigationViewItem>
                <ui:NavigationViewItem
                    Content="USB Panels"
                    Tag="usbpanels"
                    TargetPageType="{x:Type pages:UsbPanelsPage}">
                    <ui:NavigationViewItem.Icon>
                        <ui:SymbolIcon Symbol="UsbPlug20" />
                    </ui:NavigationViewItem.Icon>
                </ui:NavigationViewItem>
                <ui:NavigationViewItem
                    Content="Settings"
                    Tag="settings"
                    TargetPageType="{x:Type pages:SettingsPage}">
                    <ui:NavigationViewItem.Icon>
                        <ui:SymbolIcon Symbol="Settings20" />
                    </ui:NavigationViewItem.Icon>
                </ui:NavigationViewItem>
                <ui:NavigationViewItem
                    Content="About"
                    Tag="about"
                    TargetPageType="{x:Type pages:AboutPage}">
                    <ui:NavigationViewItem.Icon>
                        <ui:SymbolIcon Symbol="ChatHelp20" />
                    </ui:NavigationViewItem.Icon>
                </ui:NavigationViewItem>
            </ui:NavigationView.FooterMenuItems>
            <ui:NavigationView.ContentOverlay>
                <Grid>
                    <ui:SnackbarPresenter x:Name="RootSnackbar" />
                </Grid>
            </ui:NavigationView.ContentOverlay>
        </ui:NavigationView>

        <ContentPresenter
            x:Name="RootContentDialog"
            Grid.Row="0"
            Grid.RowSpan="2" />

        <tray:NotifyIcon
            x:Name="TrayIcon"
            Grid.Row="0"
            FocusOnLeftClick="True"
            Icon="/InfoPanel;component/Resources/Images/favicon.ico"
            LeftClick="TrayIcon_LeftClick"
            MenuOnRightClick="True"
            TooltipText="InfoPanel">
            <tray:NotifyIcon.Menu>
                <ContextMenu>
                    <MenuItem
                        Click="TrayMenuItem_OnClick"
                        Header="Open"
                        Tag="open">
                        <MenuItem.Icon>
                            <ui:SymbolIcon Symbol="Open24" />
                        </MenuItem.Icon>
                    </MenuItem>
                    <Separator />
                    <MenuItem
                        Click="TrayMenuItem_OnClick"
                        Header="Profiles"
                        Tag="profiles">
                        <MenuItem.Icon>
                            <ui:SymbolIcon Symbol="List20" />
                        </MenuItem.Icon>
                    </MenuItem>
                    <MenuItem
                        Click="TrayMenuItem_OnClick"
                        Header="Design"
                        Tag="design">
                        <MenuItem.Icon>
                            <ui:SymbolIcon Symbol="DesktopCursor20" />
                        </MenuItem.Icon>
                    </MenuItem>
                    <Separator />
                    <MenuItem
                        Click="TrayMenuItem_OnClick"
                        Header="Plugins"
                        Tag="plugins">
                        <MenuItem.Icon>
                            <ui:SymbolIcon Symbol="PlugConnected20" />
                        </MenuItem.Icon>
                    </MenuItem>
                    <MenuItem
                        Click="TrayMenuItem_OnClick"
                        Header="Settings"
                        Tag="settings">
                        <MenuItem.Icon>
                            <ui:SymbolIcon Symbol="Settings20" />
                        </MenuItem.Icon>
                    </MenuItem>
                    <MenuItem
                        Click="TrayMenuItem_OnClick"
                        Header="Updates"
                        Tag="updates">
                        <MenuItem.Icon>
                            <ui:SymbolIcon Symbol="PhoneUpdate20" />
                        </MenuItem.Icon>
                    </MenuItem>
                    <MenuItem
                        Click="TrayMenuItem_OnClick"
                        Header="About"
                        Tag="about">
                        <MenuItem.Icon>
                            <ui:SymbolIcon Symbol="ChatHelp20" />
                        </MenuItem.Icon>
                    </MenuItem>
                    <Separator />
                    <MenuItem
                        Click="TrayMenuItem_OnClick"
                        Header="Exit"
                        Tag="close">
                        <MenuItem.Icon>
                            <ui:SymbolIcon Symbol="Power20" />
                        </MenuItem.Icon>
                    </MenuItem>
                </ContextMenu>
            </tray:NotifyIcon.Menu>
        </tray:NotifyIcon>

    </Grid>

</ui:FluentWindow>