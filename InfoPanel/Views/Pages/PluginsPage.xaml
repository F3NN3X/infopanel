<Page
    x:Class="InfoPanel.Views.Pages.PluginsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:components="clr-namespace:InfoPanel.Views.Components"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:InfoPanel"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:viewmodels="clr-namespace:InfoPanel.ViewModels"
    Title="PluginsPage"
    d:DataContext="{d:DesignInstance Type=viewmodels:PluginsViewModel}"
    d:DesignHeight="650"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Page.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisConverter"/>
    </Page.Resources>

    <Grid Margin="0,60,0,20">
        <ScrollViewer Margin="0,10,0,0" VerticalScrollBarVisibility="Auto">
            <StackPanel MaxWidth="1360" Margin="20,30,20,0">
                <ui:CardControl Icon="PlugConnected20">
                    <ui:CardControl.Header>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="auto" />
                                <ColumnDefinition Width="auto" />
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0">
                                <TextBlock
                                    FontSize="13"
                                    FontWeight="Medium"
                                    Text="Plugin Framework" />

                                <TextBlock
                                    Margin="0,5,0,0"
                                    VerticalAlignment="Center"
                                    FontSize="12"
                                    Foreground="{DynamicResource TextFillColorTertiaryBrush}"
                                    Text="Plugins are loaded at startup. Drop a plugin folder in and restart InfoPanel to activate." />
                                <TextBlock
                                    Margin="0,5,0,0"
                                    VerticalAlignment="Center"
                                    FontSize="12"
                                    Foreground="Orange">
                                    <Bold>Warning!</Bold>
                                    Plugins run under the same privileges as InfoPanel (Administrator). Do not load untrusted plugins. Always verify the source of the plugin.<LineBreak />
                                    If unsure, do NOT use the plugin.</TextBlock>
                                <TextBlock
                                    Margin="0,5,0,0"
                                    VerticalAlignment="Center"
                                    FontSize="12"
                                    Foreground="{DynamicResource TextFillColorTertiaryBrush}"
                                    Text="If you would like to develop a plugin, visit our Github and reference Infopanel.Extras project for guidelines." />
                            </StackPanel>
                            <ui:Anchor
                                Grid.Column="2"
                                Width="150"
                                VerticalAlignment="Center"
                                Appearance="Secondary"
                                Content="Open Plugins Folder"
                                NavigateUri="{Binding PluginsFolder}" />


                        </Grid>
                    </ui:CardControl.Header>
                </ui:CardControl>

                <Label
                    Margin="0,40,0,0"
                    Content="Loaded Plugins"
                    FontSize="14"
                    FontWeight="Medium"
                    Foreground="{DynamicResource TextFillColorPrimaryBrush}" />
                <ItemsControl ItemsSource="{Binding EnabledDisplayPlugins}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Expander Margin="0,10,0,0">
                                <Expander.Header>
                                    <StackPanel>
                                        <TextBlock Text="{Binding Name}" VerticalAlignment="Center"/>
                                        <CheckBox Content="Activated" Margin="0,5,0,0" IsChecked="{Binding Activated}" />
                                    </StackPanel>
                                </Expander.Header>
                                <Expander.Content>
                                    <ItemsControl ItemsSource="{Binding Plugins}" d:ItemsSource="{Binding Plugins}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <ui:CardControl Margin="0,10,0,0">
                                                    <ui:CardControl.Header>
                                                        <StackPanel>
                                                            <Grid>
                                                                <Grid.ColumnDefinitions>
                                                                    <ColumnDefinition Width="*" />
                                                                    <ColumnDefinition Width="auto" />
                                                                </Grid.ColumnDefinitions>
                                                                <TextBlock FontSize="13" FontWeight="Medium" Text="{Binding Name}" />
                                                                <TextBlock Grid.Column="1" FontSize="12"
                                                                    Foreground="{DynamicResource TextFillColorTertiaryBrush}" Text="{Binding FileName}" />
                                                            </Grid>

                                                            <Grid Margin="0,5,0,0">
                                                                <Grid.ColumnDefinitions>
                                                                    <ColumnDefinition Width="*" />
                                                                    <ColumnDefinition Width="auto" />
                                                                </Grid.ColumnDefinitions>
                                                                <TextBlock VerticalAlignment="Center" FontSize="12" Foreground="{DynamicResource TextFillColorTertiaryBrush}"
                                                                    Text="{Binding Description}" />

                                                                <StackPanel Grid.Column="2">
                                                                    <ui:Anchor Width="150" VerticalAlignment="Center" Appearance="Secondary"
                                                                        Content="Open Config File" NavigateUri="{Binding ConfigFilePath}"
                                                                        Visibility="{Binding ConfigFilePath, Converter={StaticResource NullToVisibilityConverter}}" />
                                                                </StackPanel>
                                                            </Grid>
                                                        </StackPanel>
                                                    </ui:CardControl.Header>
                                                </ui:CardControl>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </Expander.Content>

                            </Expander>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <Label Margin="0,40,0,0" Content="Available Plugins" FontSize="14" FontWeight="Medium"
                    Foreground="{DynamicResource TextFillColorPrimaryBrush}" />
                <ItemsControl ItemsSource="{Binding AvailableDisplayPlugins}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                <ui:CardControl Margin="0,10,0,0">
                                    <ui:CardControl.Header>
                                        <StackPanel>
                                            <TextBlock Text="{Binding Name}"/>
                                            <CheckBox Content="Activated" IsChecked="{Binding Activated}"/>
                                        </StackPanel>
                                    </ui:CardControl.Header>
                                </ui:CardControl>
                            </Grid>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <Label Margin="0,40,0,0" Content="Modified Plugins (Please verify before enabling)" FontSize="14" FontWeight="Medium"
                    Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                <Label x:Name="modifiedHashWarningList" Content="These plugins have been disabled due to the plugin files changing since the last launch. Please verify before enabling any of these plugins." Visibility="{Binding ShowModifiedHashWarning}"/>

                <ItemsControl ItemsSource="{Binding ModifiedHashDisplayPlugins}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <StackPanel>
                                <ui:CardControl Margin="0,10,0,0" Icon="Warning20" Background="#FF9800" >
                                    <ui:CardControl.Header>
                                        <TextBlock Text="{Binding Name}"/>
                                    </ui:CardControl.Header>
                                </ui:CardControl>
                            </StackPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <StackPanel Orientation="Horizontal">
                    <ui:Anchor Grid.Column="2" Margin="0,20,0,0" Width="200" VerticalAlignment="Center"  Appearance="Secondary"  Content="Save and Reload Plugins"
                        Command="{Binding UpdateAndReloadPluginsCommand}" Icon="ArrowClockwise32"/>
                    <ui:Anchor Grid.Column="3" Margin="20,20,0,0" Width="185" VerticalAlignment="Center"  Appearance="Secondary" Content="Import Plugin Archive"
                        Command="{Binding AddPluginFromZipCommand}" Icon="Archive32"/>
                    <ui:Anchor Grid.Column="3" Margin="20,20,0,0" Width="150" VerticalAlignment="Center"  Appearance="Secondary" Content="Refresh Plugins"
                        Command="{Binding RefreshPluginsCommand}" Icon="ArrowSync24"/>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
