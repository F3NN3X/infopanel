<Page
    x:Class="InfoPanel.Views.Pages.AboutPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:components="clr-namespace:InfoPanel.Views.Components"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:InfoPanel"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:viewmodels="clr-namespace:InfoPanel.ViewModels"
    Title="AboutPage"
    d:DataContext="{d:DesignInstance Type=viewmodels:AboutViewModel}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <StackPanel MaxWidth="1360" Margin="20,70,20,20">
                <StackPanel Grid.Row="0" Margin="0,0,0,0">
                    <ui:CardControl Icon="Whiteboard24">
                        <ui:CardControl.Header>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="auto" />
                                    <ColumnDefinition Width="auto" />
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0">
                                    <TextBlock
                                        FontSize="13"
                                        FontWeight="Medium"
                                        Text="{Binding ViewModel.Version, StringFormat='InfoPanel v{0}'}" />
                                    <TextBlock
                                        Margin="0,5,0,0"
                                        FontSize="12"
                                        Foreground="{DynamicResource TextFillColorTertiaryBrush}"
                                        Text="GNU General Public License v3.0. Copyright © 2024 Habib Rehman." />
                                </StackPanel>

                                <ui:Anchor
                                    Grid.Column="2"
                                    Width="150"
                                    Margin="0,0,0,0"
                                    VerticalAlignment="Center"
                                    Appearance="Secondary"
                                    Content="Github"
                                    NavigateUri="https://github.com/habibrehmansg/infopanel" />

                            </Grid>
                        </ui:CardControl.Header>
                    </ui:CardControl>

                    <!--  Info Links  -->
                    <ItemsControl Margin="0,10,0,0" ItemsSource="{Binding ViewModel.InfoLinks}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <ui:CardControl Margin="0,0,0,10" Icon="{Binding Icon}">
                                    <ui:CardControl.Header>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="auto" />
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="auto" />
                                            </Grid.ColumnDefinitions>

                                            <StackPanel Grid.Column="0" VerticalAlignment="Center">
                                                <TextBlock
                                                    FontSize="13"
                                                    FontWeight="Medium"
                                                    Text="{Binding Title}" />
                                                <TextBlock
                                                    Margin="0,5,0,0"
                                                    FontSize="12"
                                                    Foreground="{DynamicResource TextFillColorTertiaryBrush}"
                                                    Text="{Binding Description}" />
                                            </StackPanel>
                                            <ui:Anchor
                                                Grid.Column="2"
                                                Width="150"
                                                Margin="0,0,0,0"
                                                VerticalAlignment="Center"
                                                Appearance="Secondary"
                                                Content="{Binding ButtonText}"
                                                NavigateUri="{Binding NavigateUri}" />
                                        </Grid>
                                    </ui:CardControl.Header>
                                </ui:CardControl>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>



                    <!--  Contributors  -->
                    <ui:CardExpander
                        Margin="0,0,0,10"
                        HorizontalContentAlignment="Left"
                        Icon="People20">
                        <ui:CardExpander.Header>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0" VerticalAlignment="Center">
                                    <TextBlock
                                        FontSize="13"
                                        FontWeight="Medium"
                                        Text="People" />
                                    <TextBlock
                                        Margin="0,5,0,0"
                                        FontSize="12"
                                        Foreground="{DynamicResource TextFillColorTertiaryBrush}"
                                        Text="Fellow humans who helped and continue to make InfoPanel great." />
                                </StackPanel>
                            </Grid>
                        </ui:CardExpander.Header>

                        <StackPanel>
                            <ItemsControl ItemsSource="{Binding ViewModel.Contributors}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Margin="0,0,0,20">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="Auto" />
                                            </Grid.ColumnDefinitions>
                                            <StackPanel Grid.Column="0" VerticalAlignment="Center">
                                                <TextBlock
                                                    FontSize="13"
                                                    FontWeight="Medium"
                                                    Text="{Binding Name}" />
                                                <TextBlock
                                                    Margin="0,0,0,0"
                                                    FontSize="12"
                                                    Foreground="{DynamicResource TextFillColorTertiaryBrush}"
                                                    Text="{Binding Description}" />
                                            </StackPanel>
                                        </Grid>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </ui:CardExpander>

                    <!--  Other Licenses  -->
                    <ui:CardExpander
                        Margin="0,0,0,10"
                        HorizontalContentAlignment="Left"
                        Icon="Code20">
                        <ui:CardExpander.Header>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0" VerticalAlignment="Center">
                                    <TextBlock
                                        FontSize="13"
                                        FontWeight="Medium"
                                        Text="Licenses" />
                                    <TextBlock
                                        Margin="0,5,0,0"
                                        FontSize="12"
                                        Foreground="{DynamicResource TextFillColorTertiaryBrush}"
                                        Text="Software and licenses used." />
                                </StackPanel>
                            </Grid>
                        </ui:CardExpander.Header>

                        <StackPanel HorizontalAlignment="Stretch">
                            <ItemsControl ItemsSource="{Binding ViewModel.ThirdPartyLicenses}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Margin="0,0,0,20" HorizontalAlignment="Stretch">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="Auto" />
                                            </Grid.ColumnDefinitions>
                                            <StackPanel Grid.Column="0" VerticalAlignment="Center">
                                                <TextBlock
                                                    FontSize="13"
                                                    FontWeight="Medium"
                                                    Text="{Binding Name}" />
                                                <TextBlock
                                                    Margin="0,0,0,0"
                                                    FontSize="12"
                                                    Foreground="{DynamicResource TextFillColorTertiaryBrush}"
                                                    Text="{Binding License}" />
                                                <ui:HyperlinkButton
                                                    Content="{Binding ProjectUrl}"
                                                    FontSize="12"
                                                    Icon="Link20"
                                                    NavigateUri="{Binding ProjectUrl}" />
                                            </StackPanel>
                                        </Grid>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </ui:CardExpander>

                </StackPanel>
            </StackPanel>
</Page>