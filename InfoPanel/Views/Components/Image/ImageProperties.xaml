<UserControl
    x:Class="InfoPanel.Views.Components.ImageProperties"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:anim="https://github.com/whistyun/AnimatedImage.Wpf"
    xmlns:app="clr-namespace:InfoPanel"
    xmlns:controls="clr-namespace:InfoPanel.Views.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:InfoPanel.Views.Components"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:metro="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:models="clr-namespace:InfoPanel.Models"
    xmlns:sys="clr-namespace:System;assembly=mscorlib"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    d:DataContext="{d:DesignInstance Type=models:SensorImageDisplayItem}"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <UserControl.Resources>
        <ObjectDataProvider
            x:Key="EnumValues"
            MethodName="GetValues"
            ObjectType="{x:Type sys:Enum}">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="models:SensorValueType" />
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>
    </UserControl.Resources>

    <Grid Margin="10,10,10,10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0" Margin="0,0,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0" Margin="0,0,0,0">
                    <TextBox x:Name="TextBoxName" Text="{Binding Name}" />
                    <TextBlock
                        Margin="5,0,0,0"
                        FontSize="12"
                        Foreground="{DynamicResource TextFillColorDisabledBrush}"
                        Text="Name" />
                </StackPanel>
                <ui:Button
                    x:Name="ButtonSelect"
                    Grid.Column="1"
                    Margin="10,0,0,0"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Top"
                    Appearance="Primary"
                    Click="ButtonSelect_Click"
                    Content="Select Media"
                    Visibility="{Binding ReadOnlyFile, Converter={StaticResource InverseBooleanToVisibilityConverter}}" />
            </Grid>

            <Grid Grid.Row="1" Margin="0,10,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <StackPanel Margin="0,0,0,0">
                    <ui:NumberBox
                        Margin="0,0,0,0"
                        FontSize="14"
                        MaxDecimalPlaces="0"
                        Minimum="0"
                        SmallChange="1"
                        Text="{Binding Width}"
                        Value="{Binding Width}" />
                    <TextBlock
                        Margin="5,0,0,0"
                        FontSize="12"
                        Foreground="{DynamicResource TextFillColorDisabledBrush}"
                        Text="Width" />
                </StackPanel>

                <StackPanel Grid.Column="1" Margin="10,0,0,0">
                    <ui:NumberBox
                        Margin="0,0,0,0"
                        FontSize="14"
                        MaxDecimalPlaces="0"
                        Minimum="0"
                        SmallChange="1"
                        Text="{Binding Height}"
                        Value="{Binding Height}" />
                    <TextBlock
                        Margin="5,0,0,0"
                        FontSize="12"
                        Foreground="{DynamicResource TextFillColorDisabledBrush}"
                        Text="Height" />
                </StackPanel>
            </Grid>

            <Grid Grid.Row="2" Margin="0,10,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Margin="0,0,0,0">
                    <Slider
                        Name="SliderFScale"
                        Grid.Column="1"
                        Margin="0,0,0,0"
                        Maximum="200"
                        Minimum="1"
                        Value="{Binding Scale}" />

                    <Grid Margin="5,0,5,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="auto" />
                        </Grid.ColumnDefinitions>
                        <TextBlock
                            Grid.Column="0"
                            Margin="0,0,0,0"
                            FontSize="12"
                            Foreground="{DynamicResource TextFillColorDisabledBrush}"
                            Text="Resize scale" />
                        <TextBlock
                            Grid.Column="1"
                            Margin="0,0,0,0"
                            FontSize="12"
                            Foreground="{DynamicResource TextFillColorDisabledBrush}"
                            Text="{Binding Scale, Mode=OneWay}" />
                    </Grid>
                </StackPanel>

                <StackPanel Grid.Column="1" Margin="10,0,0,0">
                    <Slider
                        Margin="0,0,0,0"
                        Maximum="180"
                        Minimum="-180"
                        Value="{Binding Rotation}" />

                    <Grid Margin="5,0,5,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="auto" />
                        </Grid.ColumnDefinitions>
                        <TextBlock
                            Grid.Column="0"
                            Margin="0,0,0,0"
                            FontSize="12"
                            Foreground="{DynamicResource TextFillColorDisabledBrush}"
                            Text="Rotation" />
                        <TextBlock
                            Grid.Column="1"
                            Margin="0,0,0,0"
                            FontSize="12"
                            Foreground="{DynamicResource TextFillColorDisabledBrush}"
                            Text="{Binding Rotation, Mode=OneWay}" />
                    </Grid>
                </StackPanel>


            </Grid>


            <Grid Grid.Row="3" Margin="0,10,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>

                <StackPanel>
                    <CheckBox
                        x:Name="CheckBoxLayer"
                        Margin="0,0,0,0"
                        Content="Add Fill Layer"
                        IsChecked="{Binding Layer}" />
                    <metro:ColorPicker
                        Height="40"
                        Margin="0,0,0,0"
                        metro:TextBoxHelper.UseFloatingWatermark="True"
                        metro:TextBoxHelper.Watermark="Fill color"
                        Background="Transparent"
                        SelectedColor="{Binding LayerColor, Mode=TwoWay}" />
                </StackPanel>

                <controls:MyImage
                    Grid.Column="1"
                    Width="200"
                    Height="75"
                    Margin="10,0,0,0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    ImagePath="{Binding CalculatedPath, Mode=OneWay}" />
            </Grid>

            <StackPanel
                Grid.Row="4"
                Margin="0,0,0,0"
                Visibility="{Binding ReadOnlyFile, Converter={StaticResource InverseBooleanToVisibilityConverter}}">
                <CheckBox
                    x:Name="CheckBoxCache"
                    Margin="0,10,0,0"
                    Content="Cache the image - Lower CPU usage but higher RAM."
                    IsChecked="{Binding Cache}"
                    Unchecked="CheckBoxCache_Unchecked" />
            </StackPanel>

        </Grid>

        <Grid Grid.Column="1" Margin="10,0,0,0">
            <ContentControl Content="{Binding}">
                <ContentControl.Resources>
                    <DataTemplate DataType="{x:Type models:HttpImageDisplayItem}">
                        <StackPanel>
                            <Grid Grid.Row="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <StackPanel>
                                    <TextBox
                                        Margin="0,0,0,0"
                                        IsReadOnly="True"
                                        Text="{Binding SensorName}" />
                                    <TextBlock
                                        Margin="5,0,0,0"
                                        FontSize="12"
                                        Foreground="{DynamicResource TextFillColorDisabledBrush}"
                                        Text="Sensor" />
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </DataTemplate>
                    <DataTemplate DataType="{x:Type models:SensorImageDisplayItem}">
                        <StackPanel>

                            <Grid Grid.Row="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <StackPanel>
                                    <TextBox
                                        Margin="0,0,0,0"
                                        IsReadOnly="True"
                                        Text="{Binding SensorName}" />
                                    <TextBlock
                                        Margin="5,0,0,0"
                                        FontSize="12"
                                        Foreground="{DynamicResource TextFillColorDisabledBrush}"
                                        Text="Sensor" />
                                </StackPanel>

                                <StackPanel Grid.Column="1" Margin="10,0,0,0">
                                    <ComboBox
                                        x:Name="ComboBoxValueType"
                                        ItemsSource="{Binding Source={StaticResource EnumValues}}"
                                        SelectedValue="{Binding ValueType}" />
                                    <TextBlock
                                        Margin="5,0,0,0"
                                        FontSize="12"
                                        Foreground="{DynamicResource TextFillColorDisabledBrush}"
                                        Text="Reading" />
                                </StackPanel>
                            </Grid>



                            <Grid Margin="0,15,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <Grid Margin="0,0,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="auto" />
                                    </Grid.ColumnDefinitions>

                                    <StackPanel>
                                        <ui:NumberBox
                                            Name="NumberBoxThreshold1"
                                            Margin="0,0,0,0"
                                            FontSize="14"
                                            MaxDecimalPlaces="3"
                                            Minimum="0"
                                            SmallChange="1"
                                            Text="{Binding Threshold1}"
                                            Value="{Binding Threshold1}" />
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="auto" />
                                            </Grid.ColumnDefinitions>
                                            <TextBlock
                                                Margin="5,0,0,0"
                                                FontSize="12"
                                                Foreground="{DynamicResource TextFillColorDisabledBrush}"
                                                Text="Show when ≥ Threshold #1" />
                                            <TextBlock
                                                Grid.Column="1"
                                                Margin="5,0,0,0"
                                                FontSize="12"
                                                Foreground="{DynamicResource TextFillColorDisabledBrush}"
                                                Text="AND" />
                                        </Grid>

                                    </StackPanel>
                                </Grid>


                                <Grid Grid.Column="1" Margin="10,0,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="auto" />
                                    </Grid.ColumnDefinitions>

                                    <StackPanel>
                                        <ui:NumberBox
                                            Name="NumberBoxThreshold2"
                                            Margin="0,0,0,0"
                                            FontSize="14"
                                            MaxDecimalPlaces="3"
                                            Minimum="0"
                                            SmallChange="1"
                                            Text="{Binding Threshold2}"
                                            Value="{Binding Threshold2}" />
                                        <TextBlock
                                            Margin="5,0,0,0"
                                            FontSize="12"
                                            Foreground="{DynamicResource TextFillColorDisabledBrush}"
                                            Text="Hide when &gt; Threshold #2" />
                                    </StackPanel>

                                </Grid>
                            </Grid>
                        </StackPanel>
                    </DataTemplate>
                    <DataTemplate DataType="{x:Type models:ImageDisplayItem}" />
                </ContentControl.Resources>
            </ContentControl>

        </Grid>

    </Grid>
</UserControl>
