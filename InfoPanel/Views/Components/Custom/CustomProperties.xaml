        <Image x:Name="ImagePreview" Grid.Column="2" Height="150" Margin="10,0,0,0"
               anim:ImageBehavior.AnimatedSource="{Binding DisplayImage, Mode=OneWay}"/>

    </Grid>
</UserControl>
