<UserControl
    x:Class="InfoPanel.Views.Components.CustomProperties"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:app="clr-namespace:InfoPanel"
    xmlns:controls="clr-namespace:InfoPanel.Views.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:InfoPanel.Views.Components"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:metro="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:models="clr-namespace:InfoPanel.Models"
    xmlns:pages="clr-namespace:InfoPanel.Views.Pages"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    mc:Ignorable="d">

    <Grid Margin="10,10,10,10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1.5*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" Margin="0,0,10,0">
            <StackPanel Margin="0,0,0,0">
                <ui:NumberBox
                    Margin="0,0,0,0"
                    FontSize="14"
                    MaxDecimalPlaces="3"
                    SmallChange="1"
                    Text="{Binding MinValue}" />
                <TextBlock
                    Margin="5,0,0,0"
                    FontSize="12"
                    Foreground="{DynamicResource TextFillColorTertiaryBrush}"
                    Text="Min value (sensor lower bound)" />
            </StackPanel>

            <StackPanel Margin="0,0,0,0">
                <ui:NumberBox
                    Margin="0,8,0,0"
                    FontSize="14"
                    MaxDecimalPlaces="3"
                    SmallChange="1"
                    Text="{Binding MaxValue}" />
                <TextBlock
                    Margin="5,0,0,0"
                    FontSize="12"
                    Foreground="{DynamicResource TextFillColorTertiaryBrush}"
                    Text="Max value (sensor upper bound)" />
            </StackPanel>

            <StackPanel Margin="0,10,0,0">
                <ui:NumberBox
                    Margin="0,0,0,0"
                    FontSize="14"
                    MaxDecimalPlaces="0"
                    SmallChange="1"
                    Text="{Binding Width}"
                    Value="{Binding Width}" />
                <TextBlock
                    Margin="5,0,0,0"
                    FontSize="12"
                    Foreground="{DynamicResource TextFillColorDisabledBrush}"
                    Text="Width" />
            </StackPanel>

            <StackPanel Grid.Column="1" Margin="0,10,0,0">
                <ui:NumberBox
                    Margin="0,0,0,0"
                    FontSize="14"
                    MaxDecimalPlaces="0"
                    SmallChange="1"
                    Text="{Binding Height}"
                    Value="{Binding Height}" />
                <TextBlock
                    Margin="5,0,0,0"
                    FontSize="12"
                    Foreground="{DynamicResource TextFillColorDisabledBrush}"
                    Text="Height" />
            </StackPanel>

            <StackPanel Grid.Row="5" Margin="0,10,0,0">
                <Slider
                    Name="SliderFScale"
                    Grid.Column="1"
                    Margin="0,0,0,0"
                    Maximum="200"
                    Minimum="5"
                    Value="{Binding Scale}" />

                <Grid Margin="5,0,5,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="auto" />
                    </Grid.ColumnDefinitions>
                    <TextBlock
                        Grid.Column="0"
                        Margin="0,0,0,0"
                        FontSize="12"
                        Foreground="{DynamicResource TextFillColorDisabledBrush}"
                        Text="Resize scale" />
                    <TextBlock
                        Grid.Column="1"
                        Margin="0,0,0,0"
                        FontSize="12"
                        Foreground="{DynamicResource TextFillColorDisabledBrush}"
                        Text="{Binding Scale, Mode=OneWay}" />
                </Grid>
            </StackPanel>

        </StackPanel>


        <Grid Grid.Column="1" Margin="10,0,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="auto" />
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <TextBlock
                    Margin="0,0,0,0"
                    Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                    TextWrapping="Wrap">
                    Select up to 101 images for display.
                </TextBlock>

                <Grid Grid.Row="1" Margin="0,10,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="50" />
                        <ColumnDefinition Width="60" />
                        <ColumnDefinition Width="150" />
                    </Grid.ColumnDefinitions>
                    <Label Grid.Column="0" Foreground="{DynamicResource TextFillColorSecondaryBrush}">
                        <TextBlock
                            Grid.Column="0"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Text="Image" />
                    </Label>
                    <Label Grid.Column="1">
                        <TextBlock
                            Margin="10,0,0,0"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                            Text="Step" />
                    </Label>
                    <Label Grid.Column="2">
                        <TextBlock>
                            <TextBlock
                                Margin="10,0,0,0"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                Text="Path" />
                        </TextBlock>
                    </Label>
                </Grid>

                <ListView
                    Name="ListViewItems"
                    Grid.Row="2"
                    Margin="0,10,0,0"
                    ItemsSource="{Binding Images}"
                    ScrollViewer.HorizontalScrollBarVisibility="Hidden"
                    ScrollViewer.VerticalScrollBarVisibility="Visible"
                    SelectedItem="{Binding ViewModel.SelectedItem, RelativeSource={RelativeSource AncestorType=local:CustomProperties}}"
                    SelectionMode="Extended">
                    <ListView.ItemContainerStyle>
                        <Style TargetType="ListViewItem">
                            <Setter Property="Margin" Value="0,0,0,5" />
                            <Setter Property="IsSelected" Value="{Binding Selected, Mode=TwoWay}" />
                        </Style>
                    </ListView.ItemContainerStyle>
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Grid Margin="0,0,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="50" />
                                    <ColumnDefinition Width="60" />
                                    <ColumnDefinition Width="150" />
                                </Grid.ColumnDefinitions>

                                <Label Grid.Column="0" HorizontalAlignment="Left">
                                    <Image
                                        Width="35"
                                        Height="35"
                                        Source="{Binding CalculatedPath, Converter={StaticResource CacheImageConverter}, Mode=OneWay}" />
                                </Label>

                                <TextBlock
                                    Grid.Column="1"
                                    Margin="10,0,0,0"
                                    VerticalAlignment="Center">
                                    <TextBlock.Text>
                                        <MultiBinding StringFormat="{}{0}">
                                            <Binding Converter="{StaticResource CustomStepIndexConverter}" />
                                        </MultiBinding>
                                    </TextBlock.Text>
                                </TextBlock>

                                <TextBlock
                                    Grid.Column="2"
                                    Margin="10,0,0,0"
                                    VerticalAlignment="Center"
                                    TextTrimming="CharacterEllipsis">
                                    <TextBlock.Text>
                                        <MultiBinding StringFormat="{}{0}">
                                            <Binding Mode="OneWay" Path="FilePath" />
                                        </MultiBinding>
                                    </TextBlock.Text>
                                </TextBlock>

                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>


            </Grid>

            <StackPanel
                Grid.Column="1"
                Margin="10,0,0,0"
                VerticalAlignment="Center"
                Orientation="Vertical">
                <ui:Button
                    Click="ButtonAddStep_Click"
                    Icon="SaveCopy20"
                    ToolTip="Select new images" />
                <ui:Button
                    Margin="0,10,0,0"
                    Click="ButtonStepUp_Click"
                    Icon="ArrowUp20"
                    IsEnabled="{Binding ViewModel.ItemSelected, RelativeSource={RelativeSource AncestorType=local:CustomProperties}}"
                    ToolTip="Move up" />
                <ui:Button
                    Margin="0,10,0,0"
                    Click="ButtonStepDown_Click"
                    Icon="ArrowDown20"
                    IsEnabled="{Binding ViewModel.ItemSelected, RelativeSource={RelativeSource AncestorType=local:CustomProperties}}"
                    ToolTip="Move down" />
                <ui:Button
                    x:Name="ButtonDelete"
                    Margin="0,10,0,0"
                    Appearance="Danger"
                    Click="ButtonDelete_Click"
                    Icon="Delete20"
                    IsEnabled="{Binding ViewModel.ItemSelected, RelativeSource={RelativeSource AncestorType=local:CustomProperties}}"
                    ToolTip="Delete selected item" />
            </StackPanel>
        </Grid>

