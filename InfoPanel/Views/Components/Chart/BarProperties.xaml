<UserControl
    x:Class="InfoPanel.Views.Components.BarProperties"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:app="clr-namespace:InfoPanel"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:InfoPanel.Views.Components"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:metro="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:models="clr-namespace:InfoPanel.Models"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    d:DataContext="{d:DesignInstance Type=models:BarDisplayItem}"
    d:DesignWidth="200"
    mc:Ignorable="d">

    <Grid Margin="10,10,10,10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Grid Margin="0,0,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="1*" />
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Margin="0,0,0,0">
                    <ui:NumberBox
                        Margin="0,0,0,0"
                        FontSize="14"
                        LargeChange="1"
                        MaxDecimalPlaces="1"
                        SmallChange="1"
                        Text="{Binding Width}"
                        Value="{Binding Width}" />
                    <TextBlock
                        Margin="5,0,0,0"
                        FontSize="12"
                        Foreground="{DynamicResource TextFillColorDisabledBrush}"
                        Text="Width" />
                </StackPanel>

                <StackPanel Grid.Column="1" Margin="10,0,0,0">
                    <ui:NumberBox
                        Margin="0,0,0,0"
                        FontSize="14"
                        LargeChange="1"
                        MaxDecimalPlaces="1"
                        SmallChange="1"
                        Text="{Binding Height}"
                        Value="{Binding Height}" />
                    <TextBlock
                        Margin="5,0,0,0"
                        FontSize="12"
                        Foreground="{DynamicResource TextFillColorDisabledBrush}"
                        Text="Height" />
                </StackPanel>

                <StackPanel Grid.Column="2" Margin="10,0,0,0">
                    <ui:NumberBox
                        Margin="0,0,0,0"
                        FontSize="14"
                        LargeChange="1"
                        MaxDecimalPlaces="1"
                        SmallChange="1"
                        Text="{Binding CornerRadius}"
                        Value="{Binding CornerRadius}" />
                    <TextBlock
                        Margin="5,0,0,0"
                        FontSize="12"
                        Foreground="{DynamicResource TextFillColorDisabledBrush}"
                        Text="Corner Radius" />
                </StackPanel>

            </Grid>

            <Grid Grid.Row="2" Margin="0,10,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <metro:ColorPicker
                    Grid.Column="0"
                    Height="40"
                    Margin="0,0,0,0"
                    metro:TextBoxHelper.UseFloatingWatermark="True"
                    metro:TextBoxHelper.Watermark="Bar Color"
                    Background="Transparent"
                    SelectedColor="{Binding Color, Mode=TwoWay}" />
            </Grid>


            <Grid Grid.Row="3" Margin="0,0,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="1*" />
                </Grid.ColumnDefinitions>
                <CheckBox
                    x:Name="CheckBoxFrame"
                    Grid.Column="0"
                    Margin="0,10,0,10"
                    Content="Show Frame"
                    IsChecked="{Binding Frame}" />
                <metro:ColorPicker
                    Grid.Column="1"
                    Height="40"
                    Margin="0,10,0,0"
                    metro:TextBoxHelper.UseFloatingWatermark="True"
                    metro:TextBoxHelper.Watermark="Frame color"
                    Background="Transparent"
                    SelectedColor="{Binding FrameColor, Mode=TwoWay}" />
            </Grid>

            <Grid Grid.Row="4" Margin="0,10,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="1*" />
                </Grid.ColumnDefinitions>
                <CheckBox
                    x:Name="CheckBoxBackground"
                    Grid.Row="5"
                    Margin="0,10,0,10"
                    Content="Show Background"
                    IsChecked="{Binding Background}" />
                <metro:ColorPicker
                    Grid.Column="1"
                    Height="40"
                    Margin="0,10,0,0"
                    metro:TextBoxHelper.UseFloatingWatermark="True"
                    metro:TextBoxHelper.Watermark="Background color"
                    Background="Transparent"
                    SelectedColor="{Binding BackgroundColor, Mode=TwoWay}" />
            </Grid>

            <Grid Grid.Row="5" Margin="0,10,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="1*" />
                </Grid.ColumnDefinitions>
                <CheckBox
                    x:Name="CheckBoxGradient"
                    Grid.Row="5"
                    Margin="0,10,0,10"
                    Content="Show Gradient"
                    IsChecked="{Binding Gradient}" />
                <metro:ColorPicker
                    Grid.Column="1"
                    Height="40"
                    Margin="0,10,0,0"
                    metro:TextBoxHelper.UseFloatingWatermark="True"
                    metro:TextBoxHelper.Watermark="Gradient color"
                    Background="Transparent"
                    SelectedColor="{Binding GradientColor, Mode=TwoWay}" />
            </Grid>
        </Grid>


        <Grid Grid.Column="1" Margin="20,0,0,0">

            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <CheckBox
                    x:Name="CheckBoxFlip"
                    Grid.Column="0"
                    Margin="0,10,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Content="Flip Horizontally"
                    IsChecked="{Binding FlipX}" />

                <StackPanel Grid.Column="1">
                    <TextBox
                        Margin="10,0,0,0"
                        IsReadOnly="True"
                        Text="{Binding SensorName}" />
                    <TextBlock
                        Margin="5,0,0,0"
                        FontSize="12"
                        Foreground="{DynamicResource TextFillColorDisabledBrush}"
                        Text="Sensor" />
                </StackPanel>
            </Grid>


            <Grid Grid.Row="1" Margin="0,10,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="1*" />
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Margin="0,0,0,0">
                    <ui:NumberBox
                        Margin="0,0,0,0"
                        FontSize="14"
                        IsEnabled="{Binding AutoValue, Converter={StaticResource InverseBooleanConverter}}"
                        LargeChange="1"
                        MaxDecimalPlaces="1"
                        SmallChange="1"
                        Text="{Binding MinValue}"
                        Value="{Binding MinValue}" />
                    <TextBlock
                        Margin="5,0,0,0"
                        FontSize="12"
                        Foreground="{DynamicResource TextFillColorDisabledBrush}"
                        Text="Min" />
                </StackPanel>

                <StackPanel Grid.Column="1" Margin="10,0,0,0">
                    <ui:NumberBox
                        Margin="0,0,0,0"
                        FontSize="14"
                        IsEnabled="{Binding AutoValue, Converter={StaticResource InverseBooleanConverter}}"
                        LargeChange="1"
                        MaxDecimalPlaces="1"
                        SmallChange="1"
                        Text="{Binding MaxValue}"
                        Value="{Binding MaxValue}" />
                    <TextBlock
                        Margin="5,0,0,0"
                        FontSize="12"
                        Foreground="{DynamicResource TextFillColorDisabledBrush}"
                        Text="Max" />
                    <ToggleButton
                        Grid.Column="2"
                        Margin="0,-5,0,0"
                        HorizontalAlignment="Right"
                        IsChecked="{Binding AutoValue}">
                        <ui:SymbolIcon Symbol="ArrowAutofitHeightDotted20" ToolTip="Auto" />
                    </ToggleButton>
                </StackPanel>
            </Grid>


        </Grid>

    </Grid>


</UserControl>
