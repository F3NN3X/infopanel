<UserControl
    x:Class="InfoPanel.Views.Components.ShapeProperties"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:drawing="clr-namespace:InfoPanel.Drawing"
    xmlns:local="clr-namespace:InfoPanel.Views.Components"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:metro="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:models="clr-namespace:InfoPanel.Models"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    d:DataContext="{d:DesignInstance Type=models:ShapeDisplayItem}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <StackPanel Margin="0,10,10,0">

            <StackPanel>
                <TextBox x:Name="TextBoxName" Text="{Binding Name}" />
                <TextBlock
                    Margin="5,0,0,0"
                    FontSize="12"
                    Foreground="{DynamicResource TextFillColorDisabledBrush}"
                    Text="Name" />
            </StackPanel>

            <Grid Grid.Row="1" Margin="0,10,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <StackPanel Margin="0,0,0,0">
                    <ui:NumberBox
                        Margin="0,0,0,0"
                        FontSize="14"
                        MaxDecimalPlaces="0"
                        Minimum="1"
                        SmallChange="1"
                        Text="{Binding Width}"
                        Value="{Binding Width}" />
                    <TextBlock
                        Margin="5,0,0,0"
                        FontSize="12"
                        Foreground="{DynamicResource TextFillColorDisabledBrush}"
                        Text="Width" />
                </StackPanel>

                <StackPanel Grid.Column="1" Margin="10,0,0,0">
                    <ui:NumberBox
                        Margin="0,0,0,0"
                        FontSize="14"
                        MaxDecimalPlaces="0"
                        Minimum="1"
                        SmallChange="1"
                        Text="{Binding Height}"
                        Value="{Binding Height}" />
                    <TextBlock
                        Margin="5,0,0,0"
                        FontSize="12"
                        Foreground="{DynamicResource TextFillColorDisabledBrush}"
                        Text="Height" />
                </StackPanel>

                <StackPanel Grid.Column="2" Margin="10,0,0,0">
                    <StackPanel.Style>
                        <Style TargetType="StackPanel">
                            <Setter Property="Visibility" Value="Collapsed" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Type}" Value="Capsule">
                                    <Setter Property="Visibility" Value="Visible" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </StackPanel.Style>

                    <ui:NumberBox
                        Margin="0,0,0,0"
                        FontSize="14"
                        MaxDecimalPlaces="0"
                        SmallChange="1"
                        Text="{Binding CornerRadius}"
                        Value="{Binding CornerRadius}" />
                    <TextBlock
                        Margin="5,0,0,0"
                        FontSize="12"
                        Foreground="{DynamicResource TextFillColorDisabledBrush}"
                        Text="Radius" />
                </StackPanel>
            </Grid>

            <Grid Grid.Row="2" Margin="0,20,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="1*" />
                </Grid.ColumnDefinitions>
                <CheckBox
                    x:Name="CheckBoxFrame"
                    Grid.Column="0"
                    Margin="0,0,0,10"
                    VerticalAlignment="Top"
                    Content="Show Frame"
                    IsChecked="{Binding ShowFrame}" />

                <StackPanel Grid.Column="1" Margin="0,0,0,0">
                    <metro:ColorPicker
                        Height="40"
                        Margin="0,0,0,0"
                        metro:TextBoxHelper.UseFloatingWatermark="True"
                        metro:TextBoxHelper.Watermark="Frame color"
                        Background="Transparent"
                        SelectedColor="{Binding FrameColor, Mode=TwoWay}" />

                    <StackPanel Grid.Column="1" Margin="0,10,0,0">
                        <ui:NumberBox
                            Margin="0,0,0,0"
                            FontSize="14"
                            MaxDecimalPlaces="0"
                            Minimum="1"
                            SmallChange="1"
                            Text="{Binding FrameThickness}"
                            Value="{Binding FrameThickness}" />
                        <TextBlock
                            Margin="5,0,0,0"
                            FontSize="12"
                            Foreground="{DynamicResource TextFillColorDisabledBrush}"
                            Text="Frame thickness" />
                    </StackPanel>

                </StackPanel>
            </Grid>


            <Grid Grid.Row="3" Margin="0,10,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="1*" />
                </Grid.ColumnDefinitions>
                <CheckBox
                    x:Name="CheckBoxBackground"
                    Grid.Row="5"
                    Margin="0,0,0,10"
                    VerticalAlignment="Top"
                    Content="Fill Shape"
                    IsChecked="{Binding ShowFill}" />
                <metro:ColorPicker
                    Grid.Column="1"
                    Height="40"
                    Margin="0,0,0,0"
                    metro:TextBoxHelper.UseFloatingWatermark="True"
                    metro:TextBoxHelper.Watermark="Fill color"
                    Background="Transparent"
                    SelectedColor="{Binding FillColor, Mode=TwoWay}" />
            </Grid>


        </StackPanel>

        <StackPanel Grid.Column="2" Margin="10,10,0,0">
            <Grid Grid.Row="1" Margin="0,0,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Margin="0,0,0,0">
                    <ComboBox x:Name="ComboBoxType" SelectedValue="{Binding Type}" />
                    <TextBlock
                        Margin="5,0,0,0"
                        FontSize="12"
                        Foreground="{DynamicResource TextFillColorDisabledBrush}"
                        Text="Type" />
                </StackPanel>

                <StackPanel Grid.Column="1" Margin="10,0,0,0">
                    <Slider
                        Margin="0,0,0,0"
                        Maximum="180"
                        Minimum="-180"
                        Value="{Binding Rotation}" />

                    <Grid Margin="5,0,5,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="auto" />
                        </Grid.ColumnDefinitions>
                        <TextBlock
                            Grid.Column="0"
                            Margin="0,0,0,0"
                            FontSize="12"
                            Foreground="{DynamicResource TextFillColorDisabledBrush}"
                            Text="Rotation" />
                        <TextBlock
                            Grid.Column="1"
                            Margin="0,0,0,0"
                            FontSize="12"
                            Foreground="{DynamicResource TextFillColorDisabledBrush}"
                            Text="{Binding Rotation, Mode=OneWay}" />
                    </Grid>
                </StackPanel>
            </Grid>

            <Grid Margin="0,80,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="1*" />
                </Grid.ColumnDefinitions>
                <CheckBox
                    Margin="0,0,0,0"
                    VerticalAlignment="Top"
                    Content="Add Gradient"
                    IsChecked="{Binding ShowGradient}" />
                <StackPanel Grid.Column="1" Margin="10,0,0,0">
                    <ComboBox Name="ComboBoxGradientType" SelectedValue="{Binding GradientType}" />
                    <TextBlock
                        Margin="5,0,0,0"
                        FontSize="12"
                        Foreground="{DynamicResource TextFillColorDisabledBrush}"
                        Text="Gradient type" />
                </StackPanel>
            </Grid>


            <Grid Margin="0,10,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="1*" />
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Margin="0,0,10,0">
                    <Slider
                        Margin="0,0,0,0"
                        Maximum="180"
                        Minimum="-180"
                        Value="{Binding GradientAngle}" />
                    <Grid Margin="5,0,5,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="auto" />
                        </Grid.ColumnDefinitions>
                        <TextBlock
                            Grid.Column="0"
                            Margin="0,0,0,0"
                            FontSize="12"
                            Foreground="{DynamicResource TextFillColorDisabledBrush}"
                            Text="Gradient angle" />
                        <TextBlock
                            Grid.Column="1"
                            Margin="0,0,0,0"
                            FontSize="12"
                            Foreground="{DynamicResource TextFillColorDisabledBrush}"
                            Text="{Binding GradientAngle, Mode=OneWay}" />
                    </Grid>
                </StackPanel>

                <StackPanel Grid.Column="1" Margin="10,0,0,0">
                    <StackPanel Grid.Row="5" Margin="0,0,0,0">
                        <Slider
                            Margin="0,0,0,0"
                            Maximum="3600"
                            Minimum="0"
                            Value="{Binding GradientAnimationSpeed}" />

                        <Grid Margin="5,0,5,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="auto" />
                            </Grid.ColumnDefinitions>
                            <TextBlock
                                Grid.Column="0"
                                Margin="0,0,0,0"
                                FontSize="12"
                                Foreground="{DynamicResource TextFillColorDisabledBrush}"
                                Text="Animation speed" />
                            <TextBlock
                                Grid.Column="1"
                                Margin="0,0,0,0"
                                FontSize="12"
                                Foreground="{DynamicResource TextFillColorDisabledBrush}"
                                Text="{Binding GradientAnimationSpeed, Mode=OneWay}" />
                        </Grid>
                    </StackPanel>
                </StackPanel>
            </Grid>
            <Grid Margin="0,10,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <metro:ColorPicker
                    Grid.Column="0"
                    Height="40"
                    Margin="0,0,10,0"
                    metro:TextBoxHelper.UseFloatingWatermark="True"
                    metro:TextBoxHelper.Watermark="Gradient color 1"
                    Background="Transparent"
                    SelectedColor="{Binding GradientColor, Mode=TwoWay}" />

                <metro:ColorPicker
                    Grid.Column="1"
                    Height="40"
                    Margin="10,0,0,0"
                    metro:TextBoxHelper.UseFloatingWatermark="True"
                    metro:TextBoxHelper.Watermark="Gradient color 2"
                    Background="Transparent"
                    SelectedColor="{Binding GradientColor2, Mode=TwoWay}" />
            </Grid>

        </StackPanel>
    </Grid>
</UserControl>
