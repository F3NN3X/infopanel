<UserControl
    x:Class="InfoPanel.Views.Components.CommonActions"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:InfoPanel"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    d:DesignWidth="400"
    mc:Ignorable="d">
    <StackPanel Orientation="Horizontal">
        <ui:Button
            x:Name="ButtonNewText"
            Margin="0,0,0,0"
            Appearance="Success"
            Click="ButtonNewText_Click"
            Icon="{ui:SymbolIcon Text16}"
            ToolTip="Add a customisable text item" />
        <ui:Button
            x:Name="ButtonNewImage"
            Margin="10,0,0,0"
            Appearance="Success"
            Click="ButtonNewImage_Click"
            Icon="{ui:SymbolIcon Image20}"
            ToolTip="Add an image item" />
        <ui:Button
            x:Name="ButtonNewClock"
            Margin="10,0,0,0"
            Appearance="Success"
            Click="ButtonNewClock_Click"
            Icon="{ui:SymbolIcon Clock20}"
            ToolTip="Add a dynamic clock item" />
        <ui:Button
            x:Name="ButtonNewCalendar"
            Margin="10,0,0,0"
            Appearance="Success"
            Click="ButtonNewCalendar_Click"
            Icon="{ui:SymbolIcon Calendar3Day20}"
            ToolTip="Add a dynamic calendar item" />
        <ui:Button
            x:Name="ButtonNewShape"
            Margin="10,0,0,0"
            Appearance="Success"
            Click="ButtonNewShape_Click"
            Icon="{ui:SymbolIcon DrawShape20}"
            ToolTip="Add a shape item" />
        <ui:Button
            x:Name="ButtonGroup"
            Margin="10,0,0,0"
            Appearance="Success"
            Click="ButtonGroup_Click"
            Content=""
            Icon="{ui:SymbolIcon Group20}"
            ToolTip="New Group" />
    </StackPanel>
</UserControl>
